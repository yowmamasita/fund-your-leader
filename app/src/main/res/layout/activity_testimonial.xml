<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cloudsherpas.fundyourleader.TestimonialActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/testimonialText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textIsSelectable="true"
        android:text="#whyimvotingfor"
        android:minLines="4"
        android:gravity="top" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share to Facebook"
        android:id="@+id/switch1"
        android:padding="8dp"
        android:layout_below="@+id/testimonialText"
        android:layout_alignEnd="@+id/testimonialText" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share to Twitter"
        android:id="@+id/switch2"
        android:padding="8dp"
        android:layout_below="@+id/switch1"
        android:layout_alignEnd="@+id/switch1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:id="@+id/button2"
        android:layout_below="@+id/switch2"
        android:layout_alignEnd="@+id/switch2" />
</RelativeLayout>
